{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2015", "es2016", "es2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "composite": true
  },
  "include": ["src"]
}
